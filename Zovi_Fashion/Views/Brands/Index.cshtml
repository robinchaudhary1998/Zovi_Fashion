@model IEnumerable<Zovi_Fashion.Models.Brand>

@{
    ViewData["Title"] = "Index";
}

<h1>All Brands</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Brand</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BrandName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BrandName)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@item.BrandID">Edit</a> |
                <a asp-action="Details"  class="btn btn-primary" asp-route-id="@item.BrandID">Details</a> |
                <a asp-action="Delete"  class="btn btn-danger" asp-route-id="@item.BrandID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
