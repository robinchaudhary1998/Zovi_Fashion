@model IEnumerable<Zovi_Fashion.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>All Product Details</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Product Details</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fabric)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ManufacturingYear)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fabric)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManufacturingYear)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@item.ProductID">Edit</a> |
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.ProductID">Details</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ProductID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
